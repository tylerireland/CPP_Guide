                    }
                )
              }
            )
           // cyan button text
           ( AsciiText
            color: white
            transform: { ( Translation 3.7 1.6 ) (Scale 0.90 )}
            text: "Cyan"
           )
           // cyan button
           ( Button
            transform: ( Translation 5 1.5 )
            selectName: 1
            eventId: 1000
            components: {
                ( Polygon
                    color: cyan
                    vertices: {
                        [ -2.0 -0.1 ]
                        [ -2.0  0.8 ]
                        [  2.0  0.8 ]
                        [  2.0 -0.1 ]
                    }
                )
              }
            )
     
     } // components

   ) // MyPager

  } // pages

) // LeftDisplay