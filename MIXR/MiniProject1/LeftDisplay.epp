            text: "Black"
           )
           // black button
           ( Button
            transform: ( Translation 5 7.5 )
            selectName: 1
            eventId: 1000
            components: {
                ( Polygon
                    color: black
                    vertices: {
                        [ -2.0 -0.1 ]
                        [ -2.0  0.8 ]
                        [  2.0  0.8 ]
                        [  2.0 -0.1 ]
                    }
                )
              }
            )
           // white button text
           ( AsciiText
            color: black
            transform: { ( Translation 3.7 5.6 ) (Scale 0.90 )}
            text: "White"
           )
           // white button
           ( Button
            transform: ( Translation 5 5.5 )
            selectName: 1
            eventId: 1000
            components: {
                ( Polygon
                    color: white
                    vertices: {
                        [ -2.0 -0.1 ]
                        [ -2.0  0.8 ]
                        [  2.0  0.8 ]
                        [  2.0 -0.1 ]
                    }
                )
              }
            )
           // magenta button text
           ( AsciiText
            color: white
            transform: { ( Translation 3.1 3.6 ) (Scale 0.80 )}
            text: "Magenta"
           )
           // magenta button
           ( Button
            transform: ( Translation 5 3.5 )
            selectName: 1
            eventId: 1000
            components: {
                ( Polygon
                    color: magenta
                    vertices: {
                        [ -2.0 -0.1 ]
